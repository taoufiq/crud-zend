<table>
    <tr>
        <th>Titre</th>
        <th>Artiste</th>
        <th>&nbsp;</th>
    </tr>
<?foreach($this->albums as $album) : ?>
    <tr>
        <td><?=$this->escape($album->titre);?></td>
