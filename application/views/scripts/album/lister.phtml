        <td>
            <a href="<?=$this->url(array('controller' => 'album', 'action' => 'modifier', 'id' => $album->id));?>">Modifier</a>
            <a href="javascript:void(0)" onclick="supprimerAlbum(<?=$album->id;?>)">Supprimer</a>
